<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="SettingValueStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="MiniSettingTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="alpha">50</item>
    </style>

    <style name="PositionButtonStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/zepeto_oval</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SeekbarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:progressTint">@color/zepeto</item>
        <item name="android:colorControlActivated">@color/zepeto</item>
        <item name="android:progressBackgroundTint">@color/white</item>
    </style>

</resources>